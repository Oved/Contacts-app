<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    card_view:cardBackgroundColor="#227C9D"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/item_image"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_name"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/item_image"
            android:layout_toRightOf="@+id/title_name"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="Oved RincÃ³n" />

        <TextView
            android:id="@+id/title_email"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/title_name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Email" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_email"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/tv_name"
            android:layout_toRightOf="@+id/title_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="ovedrincon29@gmail.com" />


        <TextView
            android:id="@+id/title_user_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/item_image"
            android:text="Usern Name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_user_name"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/item_image"
            android:layout_toRightOf="@+id/title_name"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="ovedrincon29" />

        <TextView
            android:id="@+id/title_phone"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_email"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/title_name"
            android:text="Phone"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_phone"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/tv_name"
            android:layout_toRightOf="@+id/title_name"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="+573133570977" />

        <TextView
            android:id="@+id/title_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_user_name"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/item_image"
            android:text="Website"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_website"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_user_name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/title_website"
            android:text="https://gse.com.co/"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>